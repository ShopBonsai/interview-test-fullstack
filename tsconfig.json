{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./server/dist",
    "rootDir": ".",
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["./server/**/*"],
  "exclude": ["node_modules", "./client/**/*"]
}
