{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"]
}
